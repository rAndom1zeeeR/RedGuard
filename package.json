{
  "name": "redguard-server",
  "version": "1.0.0",
  "description": "RedGuard сервер с Next.js 15 и горизонтальным масштабированием",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t redguard-server .",
    "docker:run": "docker run -p 3000:3000 redguard-server",
    "docker:compose": "docker-compose up -d",
    "docker:scale": "docker-compose -f docker-compose.scale.yml up -d",
    "docker:loadbalancer": "docker-compose -f docker-compose.loadbalancer.yml up -d"
  },
  "dependencies": {
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "zod": "^4.1.5",
    "redis": "^5.8.2",
    "axios": "^1.6.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "node-cron": "^4.2.1",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.6.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.5.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@eslint/eslintrc": "^3.0.0",
    "prettier": "^3.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
